<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_lol"
    android:orientation="vertical"
    android:background="#D50000"

    >

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:src="@drawable/unnamed"
        tools:ignore="MissingConstraints"
        >

    </ImageView>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_lol_2"
        android:orientation="vertical"
        android:background="#D50000"
        android:layout_gravity="center"

        >
    <LinearLayout
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_gravity="center"
        >

  <EditText
      android:id="@+id/weight_input"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColorHint="@color/white"
      android:hint="@string/weight_hint"
      android:ems="7"
      android:fontFamily="sans-serif-black"
      android:textSize="20sp"
      android:inputType="number"
      >

  </EditText>
    <TextView
        android:id="@+id/kg_text"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KG"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:inputType="number"
        >

    </TextView>
</LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/feet_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:hint="@string/height_hint_ft"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:ems="7"
        android:inputType="number"
        >

    </EditText>
    <TextView
            android:id="@+id/feet_text"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FT"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:inputType="number"
        >

</TextView>
</LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inches_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:hint="@string/height_hint_in"
            android:textColorHint="@color/white"
            android:ems="7">

        </EditText>

        <TextView
            android:id="@+id/inches_text"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:textSize="22sp">

        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/calculate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="#000000"
        android:textSize="15sp"
        android:text="@string/calculate"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center"
        >

    </Button>

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:backgroundTint="#B61515"
            android:textSize="17sp"
            android:text="@string/result"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            >

        </TextView>


    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>